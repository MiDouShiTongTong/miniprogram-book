.empty-container {
  padding: 10rpx;
  font-size: 30rpx;
  text-align: center;
  color: #666;
}

.user-book-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 30rpx;
}

.user-book-container .book-item {
  width: 30%;
  margin-bottom: 30rpx;
  box-shadow: 0 0 0 3px rgba(0, 0, 0, .1);
  border-radius: 5px;
  background-color: #fff;
}

.user-book-container .book-item .book-image {
  width: 100%;
  height: 250rpx;
}

.user-book-container .book-item .book-image image {
  width: 100%;
  height: 100%;
}


.user-book-container .book-item .book-name {
  padding: 20rpx;
  text-align: center;
  font-size: 25rpx;
}